{
  "name": "livewire-jump",
  "displayName": "Livewire Jump",
  "description": "A VS Code extension for navigating Livewire and Blade files in Laravel.",
  "icon": "images/icon.jpg",
  "version": "1.3.0",
  "publisher": "pizca",
  "repository": {
    "type": "git",
    "url": "https://github.com/pizcadesaber/vscode-livewire-jump.git"
  },
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "keywords": [
    "PHP",
    "Laravel",
    "Livewire",
    "Blade",
    "View",
    "Component",
    "Jump",
    "Go To",
    "Autocomplete"
  ],
  "activationEvents": [
    "onLanguage:php",
    "onLanguage:blade"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": [
      {
        "title": "Livewire Jump",
        "properties": {
          "livewire-jump.view.autocomplete": {
            "type": "boolean",
            "default": true,
            "description": "Enable view string autocomplete."
          },
          "livewire-jump.view.link": {
            "type": "boolean",
            "default": true,
            "description": "Enable view link."
          },
          "livewire-jump.blade.autocomplete": {
            "type": "boolean",
            "default": true,
            "description": "Enable autocomplete for '<x-' Blade tags. (Unfinished)"
          },
          "livewire-jump.blade.tagLink": {
            "type": "boolean",
            "default": true,
            "description": "Enable Blade component tag links."
          },
          "livewire-jump.livewire.tagLink": {
            "type": "boolean",
            "default": true,
            "description": "Enable Livewire Blade tag links."
          },
          "livewire-jump.livewire.autocomplete.enable": {
            "type": "boolean",
            "default": true,
            "description": "Enable autocomplete for '<livewire:' Blade tags."
          },
          "livewire-jump.livewire.autocomplete.exclude": {
            "type": "array",
            "description": "Exclude files and folders from autocomplete. It could be useful to exclude full page components.",
            "items": {
              "type": "string"
            },
            "default": [
              "Pages"
            ]
          }
        }
      }
    ],
    "commands": [
      {
        "command": "livewire-jump.goToClass",
        "title": "Go to PHP Class"
      },
      {
        "command": "livewire-jump.goToView",
        "title": "Go to Blade View"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "livewire-jump.goToClass",
          "when": "livewire-jump.hasClass"
        },
        {
          "command": "livewire-jump.goToView",
          "when": "livewire-jump.hasView"
        }
      ],
      "editor/context": [
        {
          "command": "livewire-jump.goToClass",
          "when": "livewire-jump.hasClass",
          "group": "navigation"
        },
        {
          "command": "livewire-jump.goToView",
          "when": "livewire-jump.hasView",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.95.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2",
    "ts-loader": "^9.5.1",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8"
  }
}